@model UI.Areas.Management.Models.ManagementCustomerViewModel

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

<div class="form-horizontal" id="project-form">
    <input type="hidden" data-bind="value: id" value="@ViewBag.Id" name="Id" />
    @*<div class="form-group">
            <label class="col-md-2 control-label">Customer</label>
            <div class="col-md-10">
                <input name="Id" data-bind="value: id" />
            </div>
        </div>*@
    <div class="form-group">
        <label class="col-md-4 control-label"></label>
        <div class="col-md-10">
            <input name="Image" class="img-circle" data-bind="value: image" />
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">Name</label>
        <div class="col-md-10">
            <input name="Name" data-bind="value: name" />
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">Abn</label>
        <div class="col-md-10">
            <input name="Abn" data-bind="value: abn" />
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">Franchise</label>
        <div class="col-md-10">
            <input name="Franchise" data-bind="value: franchise" />
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">Phone</label>
        <div class="col-md-10">
            <input name="Phone" data-bind="value: phone" />
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">Email</label>
        <div class="col-md-10">
            <input name="Email" data-bind="value: email" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button class="btn btn-primary" data-bind="enabled: submitEnabled, click: submit" type="button">Submit</button>
        </div>
    </div>
</div>

@section scripts {
    <script src="~/Scripts/Customer/edit.js"></script>
}